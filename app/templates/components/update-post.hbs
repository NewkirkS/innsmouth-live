<h2 class="subtitle">Update Post</h2>
<form class='newpost'>
  <div class="form-group">
    <label for="title">Title</label>
    {{input class="form-control" value=currentPost.title id="title"}}
  </div>
  <div class="form-group">
    <label for="picture">Picture URL</label>
    {{input class="form-control" value=currentPost.picture id="picture"}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input class="form-control" value=currentPost.date id="date"}}
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    {{textarea class="form-control" cols="50" rows="20" value=currentPost.content id="content"}}
  </div>
  <button class="btn" {{action 'updatePost'}}>Update</button>
</form>
