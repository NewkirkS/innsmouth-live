<form class='newpost'>
  <div class="form-group">
    <label for="title">Title</label>
    {{input class="form-control" value=title id="title"}}
  </div>
  <div class="form-group">
    <label for="picture">Picture URL</label>
    {{input class="form-control" value=picture id="picture"}}
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    {{input class="form-control" value=date id="date"}}
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    {{textarea class="form-control" cols="50" rows="20" value=content id="content"}}
  </div>
  <button class="btn" {{action 'savePost'}}>Save</button>
</form>
